{
    "name": "@fluwy/ui",
    "version": "0.0.5",
    "license": "MIT",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && npm run package && npm run styles",
        "styles": "tailwindcss -i ./src/lib/styles.css -o ./dist/styles.css --minify",
        "preview": "vite preview",
        "package": "svelte-kit sync && svelte-package && publint",
        "release": "changeset publish",
        "prepublishOnly": "npm run build",
        "test:all": "npm run test:integration && npm run test:unit",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --check . && eslint .",
        "format": "prettier --write .",
        "test": "vitest",
        "test:integration": "playwright test",
        "test:integration:update": "playwright test --update-snapshots"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        },
        "./tailwind": {
            "types": "./dist/integrations/tailwind/index.d.ts",
            "node": "./dist/integrations/tailwind/index.js"
        },
        "./styles.css": {
            "import": "./dist/styles.css",
            "require": "./dist/styles.css"
        }
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "peerDependencies": {
        "svelte": "^5.0.0-next.1"
    },
    "devDependencies": {
        "@changesets/cli": "^2.27.7",
        "@playwright/test": "^1.45.2",
        "@sveltejs/adapter-auto": "^3.2.2",
        "@sveltejs/adapter-vercel": "^5.4.1",
        "@sveltejs/kit": "^2.5.18",
        "@sveltejs/package": "^2.3.2",
        "@sveltejs/vite-plugin-svelte": "^3.1.1",
        "@tailwindcss/typography": "^0.5.13",
        "@testing-library/svelte": "^5.2.0",
        "@types/color": "^3.0.6",
        "@types/eslint": "^8.56.10",
        "@types/lodash": "^4.17.7",
        "@types/node": "^20.14.10",
        "@vitest/coverage-istanbul": "^2.0.3",
        "autoprefixer": "^10.4.19",
        "eslint": "^9.7.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-svelte": "^2.42.0",
        "globals": "^15.8.0",
        "jsdom": "^24.1.0",
        "nock": "14.0.0-beta.7",
        "postcss": "^8.4.39",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.6.5",
        "publint": "^0.2.8",
        "sass": "^1.77.8",
        "svelte": "5.0.0-next.171",
        "svelte-check": "^3.8.4",
        "tailwindcss": "^3.4.5",
        "tslib": "^2.6.3",
        "typescript": "^5.5.3",
        "typescript-eslint": "8.0.0-alpha.39",
        "vite": "^5.3.4",
        "vitest": "^2.0.3"
    },
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "dependencies": {
        "bits-ui": "^0.21.12",
        "clsx": "^2.1.1",
        "color": "^4.2.3",
        "dayjs": "^1.11.11",
        "hotkeys-js": "^3.13.7",
        "iconify-icon": "^2.1.0",
        "lodash": "^4.17.21",
        "svelte-radix": "^1.1.0",
        "svelte-sonner": "^0.3.27",
        "tailwind-merge": "^2.4.0",
        "yaml": "^2.4.5"
    },
    "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
